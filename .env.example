# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Hugging Face API Key (optional)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# Local Model Endpoint (if using custom model)
LOCAL_API_KEY=your-local-api-key
LOCAL_MODEL_ENDPOINT=http://localhost:8000

# Database (if using PostgreSQL)
DB_USER=benchmark_user
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=benchmark_db

# Optional: OpenRouter (for accessing multiple models via one API)
OPENROUTER_API_KEY=sk-or-your-openrouter-key

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
